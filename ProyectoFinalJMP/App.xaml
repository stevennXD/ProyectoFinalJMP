<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProyectoFinalJMP"
             x:Class="ProyectoFinalJMP.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Agrega los diccionarios de recursos existentes -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Definir Material Icons como fuente personalizada -->
            <OnPlatform x:Key="MaterialIconsFontFamily" x:TypeArguments="x:String">
                <On Platform="iOS" Value="MaterialIcons-Regular" />
                <On Platform="Android" Value="materialdesignicons-webfont" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>
